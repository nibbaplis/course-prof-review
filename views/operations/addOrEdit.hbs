<h3>{{viewTitle}}</h3>

<form action="/operations" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{Course._id}}">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="Name" placeholder="Name" value="{{Course.Name}}">
        <div class="text-danger">
            {{Course.NameError}}</div>
    </div>
    <div class="form-group">
        <label>Description</label>
        <input type="text" class="form-control" name="Description" placeholder="Description" value="{{Course.Description}}">
        <div class="text-danger">
            {{Course.DescriptionError}}</div>
    </div>
    <div class="form-group">
        <label>Average_grade</label>
        <input type="number" class="form-control" name="Average_grade" placeholder="Average_grade" value="{{Course.Average_grade}}">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/operations/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>